<% title "Post" %>

<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
<% if logged_in? %>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
<%end%>
  <%= link_to "View All", posts_path %>
</p>
