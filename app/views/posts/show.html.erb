<table>
  <tr>
    <td><div id="post_title"><%= link_to @post.title, @post %></div></td>    
	</tr>
  <tr>
		<td><div id="post_content"><%= @post.content %></div></td>
	</tr>
	<tr>
		<td><div id="time_and_author"><%= @post.created_at %> by <%= @post.author %></div></td>
	</tr>
	<tr>
		<td><div id="time_and_author">Tags: 
		<%@post.tags.each do |t|%>
		<%=t%>
		<%end%>
		</div></td>
	</tr>
</table>

<p>
<% if logged_in? %>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
<%end%>
  <%= link_to "Back to blog", posts_path %>
</p>
