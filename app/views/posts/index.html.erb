<% title "Posts" %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%=h post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to "Show", post %></td>
			<% if logged_in? %>
	      <td><%= link_to "Edit", edit_post_path(post) %></td>
	      <td><%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %></td>
			<%end%>
    </tr>
  <% end %>
</table>
<%= will_paginate @posts %>
<% if logged_in? %>
	<p><%= link_to "New Post", new_post_path %></p>
<%end%>