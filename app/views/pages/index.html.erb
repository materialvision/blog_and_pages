<% title "pages" %>

<table>
  <% for page in @pages %>
    <tr>
      <td><strong><%=h page.title %></strong></td>    
		</tr>
    <tr>
			<td><%= page.content %></td>
		</tr>
		<tr>
			<td><%= link_to "Show", page %>
			<% if logged_in? %> |
	      <%= link_to "Edit", edit_page_path(page) %> |
<%= link_to "Destroy", page, :confirm => 'Are you sure?', :method => :delete %>	
			<%end%><td>
		</tr>
		<tr><td><br></td></tr>
  <% end %>
</table>
<% if logged_in? %>
	<p><%= link_to "New page", new_page_path %></p>
<%end%>