<% title "pages" %>

<table>
  <% for page in @pages %>
  <tr>
    <td><div id="post_title"><%= link_to page.title, page %></div></td>    
	</tr>
	<tr>
		<td><div id="time_and_author"><%= page.created_at %></div></td>
	</tr>
			<td><%= link_to "Show", page %>
			<% if logged_in? %> |
	      <%= link_to "Edit", edit_page_path(page) %> |
<%= link_to "Destroy", page, :confirm => 'Are you sure?', :method => :delete %>	
			<%end%><td>
		</tr>
		<tr><td><br></td></tr>
  <% end %>
</table>
<% if logged_in? %>
	<p><%= link_to "New page", new_page_path %></p>
<%end%>